.col-md-10.col-sm-11(ng-show='loggedIn')
  form(ng-submit='addGear()')
    .form-group.col-xs-12
      label.col-xs-2 Item Name
      input.col-xs-10(type='text', placeholder='eg Camelbak Eddy Water Bottle', ng-model='addGearForm.name')
    .form-group.col-xs-12
      label.col-xs-2 Item Condition
      select.col-xs-10(ng-model='addGearForm.condition')
        option Okay
        option(selected='selected') Good
        option Very Good
        option Like New
        option New
    .form-group.col-xs-12
      label.col-xs-3 Sale Price or Rental Price (/ Day)
      input.col-xs-9(type='number', step='any', ng-model='addGearForm.price')
    .form-group.col-xs-12
      select.col-xs-12(ng-model='addGearForm.rentalOrSale')
        option(selected='selected') Sell
        option Rent
    .form-group.col-xs-12
      label.col-xs-12 Description
      textarea.col-xs-10.col-xs-offset-1(ng-model='addGearForm.description')
    .form-group.col-xs-12
      input.col-xs-12(type='submit', value='Post Item')
      
  .col-xs-12.my-gear
    .col-lg-3.col-md-4.col-xs-6.gear(ng-repeat='item in myGear')
      img.col-xs-12.img-rounded(ng-src='{{item.image || "images/default.png"}}')
      .col-xs-12
        img.profile.img-responsive(ng-src='{{profilePicture}}')
        .description.col-xs-6
          span.name {{item.name}}
          br
          span.quality {{item.quality}}
        .col-xs-4
          span.cost.text-center ${{item.price}}
          br
          button.buy {{item.rentOrBuy}}
