  p.col-xs-12.text-center.text-warning {{flashMessage}}

  .activityFeed.col-md-10.col-sm-12.col-xs-12(ng-repeat='post in feed', ng-show='{{!!feed.length}}')
    .message.col-xs-12
      a.delete.pull-right(href='javascript:void(0)', ng-show='post[1].displayName === displayName', ng-click='deletePost(post[0])') x (delete)
      img.profilefeed.col-xs-2(ng-src='{{post[1].profilePictureM}}', style='max-width: 80px')
      .col-xs-10 {{post[1].displayName}}
        small &nbsp;&nbsp; {{!!post[1].photo ? 'posted a photo' : 'says'}}
        .col-xs-12.message-picture(ng-show='!!post[1].photo')
          .photo(style='background-image: url("{{post[1].photo}}")').img-rounded.col-lg-8.col-lg-offset-0.col-xs-10.col-xs-offset-1
          hr.col-lg-8.col-xs-10
        .col-xs-12.message-content {{post[1].textContent}}
