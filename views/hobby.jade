extends layout

block content
	include top
	include mixins
	link(href="/stylesheets/hobby.css" rel="stylesheet" type="text/css")
	script(src="/script/hobby.js")
	.main
		.title
			img(src='/images/'+hobby.bannerPhoto).cover-photo
			h3.hobbyTitle=hobby.name
		#tabs
			ul
				li.tab
					a(href='#whatsNew') What's New
				li.tab
					a(href='#marketplace') Marketplace
			#whatsNew
				#posts
					each activity in recentActivity
						.activity
							.user
								a(href='/users/'+activity.owner)
									img(data-prof='/users/'+activity.owner)
							h4 hello
							.content
								img(src='/images/'+activity.tilePhoto)
								p=activity.description
				#hobbyists
					h4= 'Hobbyists ('+hobby.members.length+')'
					each member in hobby.members
						.member
							a(href='/users/'+member)
								img(data-prof='/users/'+member)
			//- #Marketplace
				//filter forSale items from database by hobby, pass as marketplaceItems
				//mixin dashItem(marketplaceItems)

			#Marketplace
				#category
					h3 category
					input(type='search', placeholder='Search items by category tags', name='searchField')
				#type
					h3 type
					button.typeButton buy
					button.typeButton rent
				#items
					.forSale
						img(src='../../images/yellowtent.png').productImage
						img(src='../../images/hobbyist01.png').feed-profile-picture
						.info
							h4 
								a(href='#') Northface Backcountry Tent
							p Like New
						.buy
							h4 $240
							p
								a(href='#') buy
					.forRent
						img(src='../../images/sleepingbag.png').productImage
						img(src='../../images/hobbyist02.png').feed-profile-picture
						.info
							h4
								a(href='#') Columbia Sleeping Bag
							p Mint Condition
						.rent
							h4 $35/day
							p 
								a(href='#') rent
					.forSale
						img(src='../../images/harness.png').productImage
						img(src='../../images/hobbyist03.png').feed-profile-picture
						.info
							h4
								a(href='#') Misty Rock Climbing Set
							p Almost New
						.buy
							h4 $35
							p
								a(href='#') buy
					.forRent
						img(src='../../images/snowboard.png').productImage
						img(src='../../images/hobbyist04.png').feed-profile-picture
						.info
							h4
								a(href='#') Burton Parkstar Snowboard
							p Used
						.rent
							h4 $15/day
							p
								a(href='#') rent
					.forSale
						img(src='../../images/camera.png').productImage
						img(src='../../images/hobbyist05.png').feed-profile-picture
						.info
							h4
								a(href='#') IDK What
							p Like New
						.buy 
							h4 $100
							p
								a(href='#') buy
					.forSale
						img(src='../../images/surfboard.png').productImage
						img(src='../../images/hobbyist06.png').feed-profile-picture
						.info
							h4 
								a(href='#') Infinity Surfboard
							p Lightly Used
						.buy
							h4 $150
							p
								a(href='#') buy

		//- //this loads all the items related to the hobbie, which are passed to the template as "items"
		//- mixin dashItems(items)

