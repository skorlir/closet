extends layout

block content
	include mixins
	mixin top(user)
	
	.main
		//story feed/item activity feed
		.story
			.user
				.user__profile-picture
			.content
				.content__body
				.content__image
		
		.right
			//item info panel
			img(src= '../images/' + item.tilePhoto)
			.name= item.name
			.rating= item.rating
			.description= item.description.substring(0,117) + '...'
