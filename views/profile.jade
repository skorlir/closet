extends layout

block content
	include mixins
	mixin top(user)
	link(href="../../stylesheets/profile.css" rel="stylesheet" type="text/css")
	
	.main
		img(src='../../images/coverpic.png').cover-photo
		img(src=profile.profilePicture).profile-picture
		h3=profile.name.first + ' ' + profile.name.last

		.main__info
			h4 Lives in 
				=profile.location
			h4 Likes 
				=profile.hobbies
		.main__recent-activity
			//render some activityTile s
				not part of original mockup though, so commented out
			//each activity in recent
				.activity-tile
					.activity-tile__user=activity.user
					.activity-tile__message=activity.message
		.main__my-collections
			//render some dashItem s
			each item in profile.myCollection
				.item
					.item__main
						i.item__mark-button
						a(href='/items/'+item._id)
							img.item__prod-img(src='/images/'+item.tilePhoto)
							p.item__name=item.name
		.main__my-favorites
			//render some more moar dashItem s
			each item in profile.favorites
				.item
					.item__main
						i.item__mark-button
						a(href='/items/'+item._id)
							img.item__prod-img(src='/images/'+item.tilePhoto)
							p.item__name=item.name
		.main__my-friends
			//render some profile pictures and usernames
			each friend in profile.friends
				.friend
					a(href='/users/'+friend)
						img(data-prof='/users/'+friend).friend__profile-picture
