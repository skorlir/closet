doctype html
html(ng-app='outrovert')
  head
    include top
  body(ng-controller='base')
    header.col-xs-12.head(ng-show="loggedIn")
      span.logo.col-xs-2
        a(href='/')
          img(src='images/logoAssets/cornerlogo.png', ng-show="loggedIn")
      span.col-xs-5.col-md-4.pull-right
        #loginButtons.col-xs-4.pull-right
          button#logout.custom-button.pull-right(ng-click='logout()', ng-show='loggedIn') Log out
        #loggedInData.col-xs-8.pull-right
          .group(ng-show='loggedIn')
            img.profile(ng-src='{{user.profilePicture}}')
            //- .col-xs-12
            h4.profile.pull-right {{user.displayName}}

    .login.col-xs-6.col-xs-offset-3(ng-hide='loggedIn')
      a(href='/')
        img.img-responsive.col-xs-12(src='/landing-assets/img/new_logo.png', style='margin: 50px 0')
      button#fbLogin.custom-button.col-xs-6.col-xs-offset-3(ng-click='fbLogin()', ng-hide='loggedIn') Login with Facebook
      hr.col-xs-6.col-xs-offset-3(style='border-color: #fff; padding: 0')
      form.col-xs-6.col-xs-offset-3
        .form-group.col-xs-12
          input.form-control(ng-model='loginForm.email', type='text', placeholder='email')
        .form-group.col-xs-12
          input.form-control(ng-model='loginForm.password', type='password', placeholder='password')
        button.custom-button.col-xs-12(ng-click='emailLogin(loginForm.email, loginForm.password)') Login with email
      img.col-xs-6.col-xs-offset-3(src='/images/icons.png')

    p.browsehappy.text-center.col-xs-12(ng-if='document.documentMode < 11')  
      | You are using an 
      strong outdated 
      | browser. Please 
      a(href="http://browsehappy.com/") upgrade your browser 
      | before using Outrovert in order to get the most out of your experience. (We do not support your browser.)
      input(type="hidden" ng-init="loggedIn = false")
      
    //nav.col-md-2.col-sm-2.col-xs-12.nav(ng-show='loggedIn')
      ul.pages
        li#here
          a(href='#/') What's New
        li 
          a(href='#/marketplace') Marketplace
        li
          a(href='#/mygear') My Gear

    ng-view(ng-if='loggedIn')
    
    include lazy-scripts

